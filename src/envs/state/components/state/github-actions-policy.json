{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowStateBucketActions",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketVersioning",
        "s3:GetBucketPolicy",
        "s3:GetBucketPublicAccessBlock",
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::my-terraform-state-bucket-yt-rpt-ana-infra",
        "arn:aws:s3:::my-terraform-state-bucket-yt-rpt-ana-infra/*"
      ]
    }
  ]
}
